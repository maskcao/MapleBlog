import type { SearchableEntry } from "@/types";
import EntryLayout from "@components/search/EntryLayout.astro";

import { getEntriesBatch } from "@lib/contentParser";
import type { CollectionKey } from "astro:content";

const searchableCollections = [
  "about",
  "pages",
  "blog",
  "notes",
//   "poetry",
//   "portfolio",
//   "recipes",
//   "terms",
] as CollectionKey[];

const searchList = (await getEntriesBatch(
  searchableCollections,
  undefined,
  false,
)) as SearchableEntry[];

console.log("准备搜索列表", searchList);
---

<EntryLayout searchList={searchList} />
